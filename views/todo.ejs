<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Todo List App</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      background-color: #f8f9fa;
    }
    .todo-item {
      background-color: #fff;
      border: 1px solid #dee2e6;
      border-radius: 6px;
      padding: 15px 20px;
      margin-bottom: 10px;
      position: relative;
    }
    .todo-actions {
      position: absolute;
      right: 20px;
      top: 50%;
      transform: translateY(-50%);
    }
    .todo-actions a {
      margin-left: 10px;
    }
  </style>
</head>

<body>
  <div class="container my-5">
    <h1 class="text-center text-white bg-success p-3 rounded">üìù My Tasks / Plans</h1>

    <div class="mt-4">
      <% todolist.forEach(function(todo, index) { %>
        <div class="todo-item">
          <%= todo %>
          <div class="todo-actions">
            <a href="/todo/<%= index %>" class="btn btn-warning btn-sm">‚úé Edit</a>
            <a href="/todo/delete/<%= index %>" class="btn btn-danger btn-sm">‚úò Delete</a>
          </div>
        </div>
      <% }); %>
    </div>

    <form action="/todo/add/" method="post" class="mt-4 p-4 bg-white shadow rounded">
      <div class="mb-3">
        <label for="newtodo" class="form-label">Add a new task:</label>
        <input type="text" name="newtodo" id="newtodo" class="form-control" placeholder="e.g. Buy groceries" autofocus required />
      </div>
      <button type="submit" class="btn btn-success">Add Task</button>
    </form>
  </div>
</body>
</html>
